<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientAmountInput"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingredient_amount_hint"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinnerIngredientMeasure"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/ingredient_measure"
        android:padding="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ingredientNameInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:padding="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingredient_hint"
            android:inputType="textAutoCorrect" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>